def license	"Public domain. Do what you like with it. NO WARRANTY!"
def a2sversion	"1.9"

import bassline;

FMBass3(P V=1)
{
	struct { fm3; panmix }
	a V;	@p P;		fb .7
	@a1 .5;	@p1 .99;	fb1 .2
	@a2 1;	@p2 1.01;	fb2 .2
	d 5
	100 {
		*a .9;	*a1 .8;	*a2 .9;	*fb .9;	d 10
	}
	a 0;	d 10
	end
.rel	a 0;	d 50
	d 100
	1() { force rel }
}

FMBass3P(P V=1)
{
	struct { fm3p; panmix }
	a V;	@p P;		fb .7
	@a1 .5;	@p1 .99;	fb1 .2
	@a2 1;	@p2 1.01;	fb2 .2
	d 5
	100 {
		*a .9;	*a1 .8;	*a2 .9;	*fb .9;	d 10
	}
	a 0;	d 10
	end
.rel	a 0;	d 50
	d 100
	1() { force rel }
}

FMBass2R(P V=1)
{
	struct { fm2r; panmix }
	a V;	@p (P - .01);	fb .9
	@a1 1;	@p1 1.01;	fb1 .8
	d 5
	100 {
		*a .95;	*fb .95; *fb1 .9;	d 10
	}
	a 0;	d 10
	end
.rel	a 0;	d 50
	d 100
	1() { force rel }
}

FMBass4R(P V=1)
{
	struct { fm4r; panmix }
	a V;	@p P;		fb .6
	@a1 1;	@p1 1;		fb1 .7
	@a2 .7;	@p2 1.98;	fb2 .5
	@a3 .5;	@p3 3.02;	fb3 .3
	d 5
	100 {
		*a .95; *a2 .95; *a3 .9
		*fb .95; *fb1 .9; *fb2 .85; *fb3 .8
		d 10
	}
	a 0;	d 10
	end
.rel	a 0; a2 0; a3 0; d 50
	d 100
	1() { force rel }
}

export Song(P V=1 L=0)
{
	struct {
		inline 0 *
		fbdelay D * *
		fbdelay D2 * >
	}

	tempo 120 4
	D.fbdelay (tick * 5.05);	D.fbgain .03
	D.ldelay (tick * 6.05);		D.lgain .05
	D.rdelay (tick * 8.03);		D.rgain .05
	D2.fbdelay (tick * 6.95);	D2.fbgain .03
	D2.ldelay (tick * 9.01);	D2.lgain .05
	D2.rdelay (tick * 11.03);	D2.rgain .05
	set

	tr P
	for {
		Bassline FMBass3 .5;	td 32
		Bassline FMBass3P .5;	td 32
		Bassline FMBass2R .5;	td 32
		Bassline FMBass4R .5;	td 32
		tr (rand 1 quant 1n - 6n + P)
		ifz L {
			d 5000
			end
		}
	}
}
